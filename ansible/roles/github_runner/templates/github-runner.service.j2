[Unit]
Description=GitHub Actions Runner
After=network.target

[Service]
User={{ github_runner_user }}
Group={{ github_runner_group }}
WorkingDirectory={{ github_runner_home }}
ExecStart={{ github_runner_home }}/run.sh
Restart=always
RestartSec=5
KillMode=process
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
