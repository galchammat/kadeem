# Database Configuration
# PostgreSQL connection string
# Format: postgres://user:password@host:port/database?options
DATABASE_URL=postgres://kadeem:your_password_here@localhost:5432/kadeem?sslmode=disable

# Riot API Key
# Get yours from: https://developer.riotgames.com/
RIOT_API_KEY=RGAPI-your-key-here

# Discord Webhook for Notifications (Optional)
# Create webhook in Discord Server Settings -> Integrations -> Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789/abcdefgh

# Backup Configuration (for Machine A)
# Tailscale hostname or IP of backup machine
BACKUP_HOST=kadeem-backup

# SSH user on backup machine
BACKUP_USER=your_username

# Path to backup directory on Machine A
BACKUP_PATH=/mnt/2tb/kadeem-backups

# Backup retention in days (default: 30)
RETENTION_DAYS=30
